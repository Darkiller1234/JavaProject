	public HashSet winObject() {
		ArrayList list = new ArrayList();
		list.addAll(lottery);
		
		for(int i = 0; i < 4; i++) {
			int rand = (int)(Math.random() * list.size());
			if(win.add(list.get(rand))!= true) {
				i--;
			}
		}
		return win;
	}
	
