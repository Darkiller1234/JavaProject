			System.out.print("password : ");
			String pd = sc.nextLine();
			for(int i = 0; i < user.size(); i++) {
				if(user.get(i).getId().equals(id) && user.get(i).getPd().equals(pd)) {
					userIndex = i;
					break;
				}
			}
		}
